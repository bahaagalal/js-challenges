<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>JS Challenge <%= id %></title>
	<link type="text/css" rel="stylesheet" href="/prism.css">
</head>
<body>
	<a href="/">Back</a>
	<h1>JS Challenge #<%= id %></h1>
	<code class="language-javascript" style="width: 100%; display: block;">
		<% if(id == 1){ %>
		jQuery(document).ready(function(){
			for(var i = 0; i < 10; i++)
			{
				jQuery.get('http://jsonplaceholder.typicode.com/posts/1', function(data){
					jQuery('#results').append(i + "<br>");
				});
			}
		});
		<% } else if(id == 2){ %>
		jQuery(document).ready(function(){
			var x = 10;
			jQuery('#results').append('x == x --> ' + Boolean(x == x));
			var y = 'javascript';
			jQuery('#results').append('<br> y == y --> ' + Boolean(y == y));
			var z = ??;
			jQuery('#results').append('<br> z == z --> ' + Boolean(z == z));
		});
		<% } else if(id == 3){ %>
		jQuery(document).ready(function(){
			var x = 10;
			var y = '30';
			jQuery('#results').append('y + x --> ' + (y + x));
			var y = '0';
			jQuery('#results').append('<br> y = ' + Boolean(y));
		});
		<% } else if(id == 4){ %>
		jQuery(document).ready(function(){
			var x = 10;

			(function bar(){
				var x = 30;

				jQuery('#results').append('x = ' + x);

				x += 10;
			})();

			jQuery('#results').append('<br> x = ' + x);

			for(var i = 0; i < 5; i++)
			{
				var x = 20;
				x += 5;
				jQuery('#results').append('<br> x = ' + x);
			}

			jQuery('#results').append('<br> x = ' + x);
		});
		<% } else if(id == 5){ %>
		jQuery(document).ready(function(){
			var z = 5;

			setTimeout(function(){
				z += 5;
				jQuery('#results').append('<br> inner -> z = ' + z);
			}, 0);

			jQuery('#results').append('<br> outer -> z = ' + z);
		});
		<% } %>
	</code>
	<a href="#" id="show">Show Results</a>
	<div id="results" style="display:none; margin-top: 20px;">
	</div>
	<script src="/jquery.js"></script>
	<script src="/prism.js"></script>
	<script>
		jQuery(document).ready(function(){
			jQuery('#show').click(function(){
				jQuery('#results').show();
			});
		});
	</script>
	<script src="/challenges/<%= id %>.js"></script>
</body>
</html>
